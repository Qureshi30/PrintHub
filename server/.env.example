# PrintHub Server Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
# For local development, use:
MONGODB_URI=mongodb://localhost:27017/printhub

# For MongoDB Atlas (recommended for production), use:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/printhub?retryWrites=true&w=majority

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_UPLOAD_PRESET=printhub_uploads

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Security
JWT_SECRET=your_super_secret_jwt_key_here
CORS_ORIGIN=http://localhost:5173

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,xls,xlsx,ppt,pptx,jpg,jpeg,png

# Razorpay Payment Gateway Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Clerk Webhook Configuration
CLERK_WEBHOOK_SECRET=your_clerk_webhook_secret

# Email Configuration (Add these to your .env file)
# Gmail SMTP Settings for EmailJS-compatible notifications
EMAIL_USER=your_gmail@gmail.com
EMAIL_APP_PASSWORD=your_16_character_app_password
EMAIL_FROM_NAME=PrintHub System
EMAIL_SUPPORT_ADDRESS=printhub@college.edu

# EmailJS Alternative Configuration (if using EmailJS web service)
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id  
EMAILJS_PUBLIC_KEY=your_emailjs_public_key
EMAILJS_PRIVATE_KEY=your_emailjs_private_key

# Print System Settings
CURRENCY_SYMBOL=â‚¹
CURRENCY_CODE=INR
DEFAULT_PAPER_COST_INR=2.00
DEFAULT_COLOR_COST_INR=5.00

# Printer Configuration
DEFAULT_PRINTER_ID=hp-laserjet-m201
FALLBACK_PRINTER_ID=microsoft-pdf

# Collection Settings
COLLECTION_TIMEOUT_HOURS=24
COLLECTION_LOCATION_DEFAULT=Main Library - Ground Floor
